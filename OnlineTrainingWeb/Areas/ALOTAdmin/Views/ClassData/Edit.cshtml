@model ViewModel.ClassDataViewModel
@{
    Layout = null;
}

@using (Html.BeginForm("Edit", "ClassData", FormMethod.Post, new { onsubmit = "return SubmitFormEdit(this)" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5 class="text-primary">Do you want to update the <span class="chip chip blue lighten-4">@Model.UserName</span> </h5>
