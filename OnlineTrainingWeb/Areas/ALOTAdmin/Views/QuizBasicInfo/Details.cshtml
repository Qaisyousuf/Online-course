@model ViewModel.QuizBasicInfoViewModel
@{
    Layout = null;
}

<div class="card-body card-body-cascade d-flex justify-content-center mt-n2">
    @using (Html.BeginForm("Details", "CourseContents", FormMethod.Get, new { onsubmit = "return SubmitFormDetails(this)" }))
    {
        @Html.HiddenFor(model => model.Id)

        <!-- Table with panel -->
        <div class="card card-cascade narrower">

            <!--Card image-->
            <div class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">

                <text><i class="fas fa-info"></i> Details of <span class="tag">@Model.FullName</span></text>
            </div>
            <!--/Card image-->

            <div class="px-4">

                <div class="table-wrapper">
                    <!--Table-->
                    <table class="table table-hover mb-0">

                        <!--Table head-->
                        <!--Table head-->
                        <!--Table body-->
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.FullName)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.FullName)</td>
                            </tr>

                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Email)</td>

                                <td class="text-primary"> @Html.DisplayFor(model => model.Email)</td>
                            </tr>

                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Mobile)</td>

                                <td class="text-primary"> @Html.DisplayFor(model => model.Mobile)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(Model=>Model.CountryNames.LandName)</td>

                               
                                <td>
                                    @Html.DropDownListFor(m => m.CountryId, new SelectList(ViewBag.CountryNames, "Id", "LandName"), "-----Select your country ------", new { @class = "form-control disabled" })
                                   
                                </td>
                            </tr>



                        </tbody>
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>

            </div>

        </div>
        <!-- Table with panel -->

    }


</div>
