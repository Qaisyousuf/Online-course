                                    <td class="text-primary"> @Html.DisplayFor(model => model.MainTitle)</td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        <a class="btn-floating btn-sm btn-info"><i class="fas fa-tag"></i></a>
