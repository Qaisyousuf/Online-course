@model ViewModel.ListOfViewModels

@if (Model.ListofAboutBanner != null)
{
<div class="AboutBannerMainSection">
    <header class="AboutBannerContent">

        <!-- Full Page Intro -->
        <div class="">
            <!-- Mask & flexbox options-->
            <div class="mask">
                <!-- Content -->
                <div class="container h-100 ">
                    <!--Grid row-->
                    <div class="row d-flex align-items-center h-100">
                        <!--Grid column-->
                        @foreach (var item in Model.ListofAboutBanner.Take(1))
                        {
                            <div class="col-md-6 col-lg-6">
                                <h1 class="mb-2 textColor ">@item.MainTitle</h1>
                                <p class="mb-2 pb-2 text-justify">@item.SubTitle</p>
                                <a href="@item.DiscoverButtonUrl" class="btn  btn-rounded btn-md ml-0"><i class="fas fa-sign-in-alt"></i> @item.DiscoverButton</a>
                                <a href="@item.JoinButtonUrl" class="btn   btn-rounded btn-rounded btn-md"> <i class="fas fa-book-open"></i> @item.JoinButton</a>

                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6 col-lg-6">
                                <lottie-player src="@item.ImageUrl" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>


                            </div>
                        }
                    
                      
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </div>
        <!-- Full Page Intro -->

    </header>
</div>
}
