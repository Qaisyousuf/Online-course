@model ViewModel.ListOfViewModels

@if (Model.ListofOnlinTrainingBenefits != null)
{
<div class="container  ">
    <section class="p-md-3 mx-md-5 text-lg-left">
        <div class="row">
           
                <div class="">
                    <!-- Mask & flexbox options-->
                    <div class="mask">
                        <!-- Content -->
                        <div class="container h-100">
                            <!--Grid row-->
                            <div class="row align-items-center h-100">
                                @foreach (var item in Model.ListofOnlinTrainingBenefits.Take(1))
                                {
                                    <div class="col-md-6 ">
                                        <div class="view">
                                            <lottie-player src="@item.AnimationUrl" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                        </div>
                                    </div>
                                    <!--Grid column-->
                                    <div class="col-md-6 HomebannerExplorationTextColor pt-5">
                                        <h1 class="mb-4">@item.MainTitle</h1>
                                        <p class="mb-4 pb-2 dark-grey-text">@item.Content</p>

                                    </div>
                                    <!--Grid column-->
                                    <!--Grid column-->

                                    <!--Grid column-->
                                }
                            </div>
                            <!--Grid row-->
                        </div>
                        <!-- Content -->
                    </div>
                    <!-- Mask & flexbox options-->
                </div>
         

        </div>
        <div class="row">
            @foreach (var item in Model.ListofOnlinTrainingBenefits)
            {
                <div class="col-lg-3 col-md-6 mb-lg-0 mb-5">
                    <div class=" mt-3 text-center HomebannerExplorationTextColor">
                        <img  src="@item.ImageUrl" class="img-fluid mb-2"/>
                        <h6 class="font-weight-bold">@item.SubTitle</h6>
                    </div>
                </div>
            }

        </div>
    </section>
</div>
  
}
