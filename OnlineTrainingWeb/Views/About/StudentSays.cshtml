@model ViewModel.ListOfViewModels

@if (Model.ListofStudentSays != null)
{
<div class="GoogleReviewbackground">
    <div class="container my-5 py-5">


        <!--Section: Content-->
        <section class="team-section text-center HomebannerExplorationTextColor">
            @foreach (var item in Model.ListofStudentSays.Take(1))
            {
                <h3 class="font-weight-bold pb-2 mb-4">@item.MainTitle</h3>
            }
            <!-- Section heading -->
            <!-- Section description -->

            <div class="row text-center text-md-left">
                @foreach (var item in Model.ListofStudentSays)
                {
                   
                <div class="col-lg-12 col-md-12 mb-2 d-md-flex justify-content-center my-4">
                    <div class="avatar mb-md-0 mb-1 mx-4">
                        <img src="@item.PicUrl" class="rounded-circle z-depth-1" alt="Sample avatar">
                    </div>
                    <div class="mx-4 HomebannerExplorationTextColor">
                        <h4 class="font-weight-bold mb-1">@item.StudentName</h4>
                        <h6 class="font-weight-bold grey-text mb-1">@item.CountryName</h6>
                        <h6 class="font-weight-bold grey-text mb-1">@item.ProgramName</h6>
                        <p class="text-justify">
                            @item.Content
                            <div class="orange-text mt-n3">
                                <i class="fas fa-star"> </i>
                                <i class="fas fa-star"> </i>
                                <i class="fas fa-star"> </i>
                                <i class="fas fa-star"> </i>
                                <i class="fas fa-star-half-alt"> </i>
                            </div>
                        </p>
                        

                        <!-- Facebook-->

                    </div>
                    
                </div>

                }

            </div>


        </section>



    </div>
</div>

}
