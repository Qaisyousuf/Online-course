@model OnlineTrainingWeb.ViewModel.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LoingLayout.cshtml";
}

<div class="LoginMainBackground">
    <div class="container">

        <div class="row">
            <div class="col-md-7">
                <div class="card card-body my-5 py-5 bg-transparent" id="WhoIsThisProgramFor">
                    <h3 class="card-title text-white">@ViewBag.Title</h3>
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true,"", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)
                        <div class="md-form">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        </div>
                        <div class="md-form">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="md-form">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="">
                                <button type="submit" value="reset" class="btn btn-rounded btn-md"> Reset</button>
                            </div>
                        </div>
                    }

                </div>
                <!-- Card -->

            </div>
            <div class="col-md-5">
                <div class="img-fluid">
                    <img src="~/Content/Images/ForgetPassword.svg" />
                </div>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
