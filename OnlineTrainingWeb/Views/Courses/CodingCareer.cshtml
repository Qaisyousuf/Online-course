@model ViewModel.ListOfViewModels

@if (Model.ListofCodingCareer != null)
{

    <div class="container py-5">


        <!--Section: Content-->
        <section class="px-md-5 text-center py-5 LuanchingCodingBackground z-depth-2 ">

            <!--Grid row-->
            <div class="row">
                @foreach (var item in Model.ListofCodingCareer.Take(1))
                {
                    <!--Grid column-->
                <div class="col-md-6 mb-4 mb-md-0 HomebannerExplorationTextColor">

                    <h3 class="font-weight-bold">@item.MainTitle</h3>

                    <p class="text-justify mx-3">
                        @item.Content
                    </p>

                    
                    <a class="btn btn-rounded btn-md ml-0" href="@item.RegisterButtonUrl" role="button">@item.RegisterButton<i class="fas fa-sign-in-alt ml-2"></i></a>
                    <a class="btn btn-rounded btn-md ml-0" href="@item.TakeCourseButtonUrl" role="button">@item.TakeCourseButton<i class="fas fa-chalkboard-teacher ml-2"></i></a>

                    <hr class="my-2" />

                    <!--Modal: Name-->
                    <div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">

                            <!--Content-->
                            <div class="modal-content">

                                <!--Body-->
                                <div class="modal-body mx-4 mb-0 p-0">

                                    <div class="embed-responsive embed-responsive-16by9 z-depth-1">
                                        <iframe class="embed-responsive-item" src="@item.VideoUrl"
                                                allowfullscreen></iframe>
                                    </div>

                                </div>

                                <!--Footer-->
                                <div class="modal-footer justify-content-center">


                                    <button type="button" class="btn btn-outline-primary btn-rounded btn-md ml-4" data-dismiss="modal">Close</button>

                                </div>

                            </div>
                            <!--/.Content-->

                        </div>
                    </div>
                    <!--Modal: Name-->

                    <a>
                        <img class="img-fluid" src="https://i.ibb.co/8Y3qgYD/Video.png" alt="video"
                             data-toggle="modal" data-target="#modal1">
                    </a>

                </div>
                    <!--Grid column-->
                    <!--Grid column-->
                <div class="col-md-6 mb-md-0 mt-md-5 mt-lg-5 mt-sm-0">

                    <lottie-player src="@item.AnimationUrl" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>

                </div>
                }

                <!--Grid column-->

            </div>
            <!--Grid row-->


        </section>
        <!--Section: Content-->


    </div>
}
