@model ViewModel.CourseDetailsViewModel
@{
    ViewBag.Title = "CourseMoreDetails";
    Layout = "~/Views/Shared/_CoursesDescriptoin.cshtml";
}

@if (Model?.Id != null)
{
    <div class="MoreCoursesDescrption">
        <div class="container">
            <header class="">

                <!-- Full Page Intro -->
                <div class="bg-transparent">
                    <!-- Mask & flexbox options-->
                    <div class="mask">
                        <!-- Content -->
                        <div class="container h-100">
                            <!--Grid row-->
                            <div class="row align-items-center h-100 textColor">
                                <!--Grid column-->
                                <div class="col-md-7">
                                    <h1 class="mb-2">@Model.MainTitle</h1>
                                    <p class="mb-4 pb-2 font-weight-normal">@Model.Title</p>
                                    <div class="orange-text mt-n3">
                                        <i class="fas fa-star"> </i>
                                        <i class="fas fa-star"> </i>
                                        <i class="fas fa-star"> </i>
                                        <i class="fas fa-star"> </i>
                                        <i class="fas fa-star-half-alt"> </i>
                                    </div>
                                </div>
                                <!--Grid column-->
                                <!--Grid column-->
                                <div class="col-md-5">
                                    <div class=" card card-cascade wider reverse mx-3 mt-5 pt-5 stickySidebar">

                                        <!-- Card image -->
                                        <div class="view view-cascade overlay" id="WhoIsThisProgramFor">
                                            <div class="CourseAnimationBackground">
                                                <lottie-player src="https://assets2.lottiefiles.com/packages/lf20_gduz3izv.json" background="transparent" speed="2" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                                <img class="card-img-top py-0 mt-0 pt-0" src="@Model.ImageUrl" alt="Card image cap">
                                            </div>

                                        </div>

                                        <!-- Card content -->
                                        <div class=" card-body card-body-cascade CustomBannerFontStyle  mt-n5  px-4 mb-0 pb-0 " id="WhoIsThisProgramFor">

                                            <!-- Title -->
                                            <h4 class="card-title font-weight-bold">@Model.ProgramName</h4>
                                          
                                            <p class="card-text">
                                                @Model.SubContents
                                            </p>

                                            <p class="ml-4 pb-0 mb-2"><i class="fab fa-acquisitions-incorporated"></i> @Model.Language</p>
                                            <p class="ml-4 pb-0 mb-2"><i class="fas fa-chalkboard-teacher"></i> @Model.Trainer</p>
                                            <p class="ml-4 mb-2"><i class="fas fa-certificate"></i> @Model.Certification</p>
                                            <p class="ml-4 mb-2"><i class="fas fa-user-graduate"></i> @Model.SutdentFinished</p>
                                            <p class="ml-4 mb-2"><i class="fas fa-briefcase"></i> @Model.CourseType</p>
                                            <p class="ml-4 mb-2"><i class="fas fa-universal-access"></i> @Model.LifeTimeAccess</p>
                                            <p class="ml-4 mb-2"><i class="fas fa-video"></i> @Model.VideoLanguage</p>

                                            <hr />
                                            <a href="/Contact" class="chip">Contact</a> <a href="#" class="chip pr-2"> @Model.Duration</a>




                                        </div>


                                    </div>
                                </div>
                                <!--Grid column-->
                            </div>
                            <!--Grid row-->
                        </div>
                        <!-- Content -->
                    </div>
                    <!-- Mask & flexbox options-->
                </div>
                <!-- Full Page Intro -->

            </header>
        </div>


    </div>

    

    <div class="container ">

        @{
            Html.RenderAction("CoursesDescriptionsData", "Courses");
        }
    </div>
}






