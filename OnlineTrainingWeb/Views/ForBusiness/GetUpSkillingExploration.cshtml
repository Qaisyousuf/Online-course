@model ViewModel.ListOfViewModels

@if (Model.ListOfUpSkillingExploration != null)
{
    <div class="container my-4 p-4">


        <!--Section: Content-->
        <section class="CustomBannerFontStyle">
            @foreach (var item in Model.ListOfUpSkillingExploration.Take(1))
            {
                <h2 class="text-center  mb-4 pb-2 text-uppercase">@item.MainTitle</h2>
            }
            <!-- Section heading -->
          

            <!-- Grid row -->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-md-4">

                        <!-- Grid row -->
                        <div class="row mb-3">
                            @foreach (var item in Model.ListOfUpSkillingExploration.Take(3))
                            {
                                <div class="col-2 mb-1 ">
                                  <img src="@item.IconUlr" class="img-fluid mx-0" />
                                </div>

                                <div class="col-10 CustomBannerFontStyle">
                                    <h5 class="font-weight-bold mb-2">@item.Title</h5>
                                    <p>
                                        @item.Content
                                    </p>
                                </div>
                            }


                        </div>


                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    @foreach (var item in Model.ListOfUpSkillingExploration.Take(1))
                    {
                        <div class="col-md-4 text-center">
                            <lottie-player src="@item.AnimationUrl" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>

                        </div>
                    }

                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4">

                        <!-- Grid row -->
                        <div class="row mb-3">
                            @foreach (var item in Model.ListOfUpSkillingExploration.Skip(3))
                            {
                                <div class="col-2">
                                    <img src="@item.IconUlr" class="img-fluid" />
                                </div>

                                <div class="col-10 CustomBannerFontStyle">
                                    <h5 class="font-weight-bold mb-3">@item.Title</h5>
                                    <p>
                                        @item.Content
                                    </p>
                                </div>
                            }


                        </div>


                    </div>

                </div>
         

        </section>
      


    </div>
}
