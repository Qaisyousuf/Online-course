@model ViewModel.ListOfViewModels

@if (Model.ListOfITSkillGapSection != null)
{
    <div class="container  py-5 ">


        <!--Section: Content-->
        <section class="px-md-5 mx-md-5 dark-grey-text text-center text-lg-left">

            <!--Grid row-->
            <div class="row CustomBannerFontStyle">
                @foreach (var item in Model.ListOfITSkillGapSection.Take(1))
                {
                    <div class="col-lg-6 mb-4 mb-lg-0 d-flex align-items-center justify-content-center">

                        <img src="@item.AnimationUrl" class="img-fluid" alt="">

                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-6 mb-4 mb-lg-0 pt-5">

                        <h3 class="font-weight-bold">@item.MainTitle</h3>

                        <p class="text-muted">
                           @item.Subcontent
                        </p>

                        <a class="font-weight-bold" href="@item.ButtonUrl">@item.Button<i class="fas fa-angle-right ml-2"></i></a>

                    </div>
                }
                <!--Grid column-->
                <!--Grid column-->

            </div>
            <!--Grid row-->


        </section>
        <!--Section: Content-->


    </div>
}
