@model ViewModel.ListOfViewModels

@if (Model.ListOfITSkillsGap != null)
{
    <div class="container py-5 z-depth-0" id="WhoIsThisProgramFor">


        <!--Section: Content-->
        <section class="px-md-5 mx-md-5 text-center text-lg-left ">

            <!--Grid row-->
            <div class="row CustomBannerFontStyle">
                @foreach (var item in Model.ListOfITSkillsGap.Take(1))
                {
                    <div class="col-md-6 mb-4 mb-md-0 h-100 pt-5 ">

                        <h3 class="font-weight-bold">@item.MainTitle</h3>

                        <p class="text-muted">
                           @item.Content
                        </p>

                        <a class="btn btn-rounded btn-md ml-0" href="@item.ButtonUrl" role="button">@item.Button<i class="fa fa-gem ml-2"></i></a>

                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6 mb-4 mb-md-0">

                        <!--Image-->
                        <div class="view overlay ">
                            <img src="@item.AnimationUrl" class="img-fluid" alt="">
                           
                        </div>

                    </div>
                    <!--Grid column-->
                }
              
               

            </div>
            <!--Grid row-->


        </section>
        <!--Section: Content-->


    </div>
}
