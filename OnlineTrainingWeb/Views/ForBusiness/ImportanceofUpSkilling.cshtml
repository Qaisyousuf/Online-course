@model ViewModel.ListOfViewModels

@if (Model.ListOfImportanceOfUpSkilling != null)
{

    <div class="container py-5 " id="WhoIsThisProgramFor">


        <!--Section: Content-->
        <section class="px-md-5 mx-md-5 text-center text-lg-left ">

            <!--Grid row-->
            <div class="row CustomBannerFontStyle">
                @foreach (var item in Model.ListOfImportanceOfUpSkilling.Take(1))
                {
                <div class="col-md-6 mb-4 mb-md-0 h-100 pt-5 ">

                    <h3 class="font-weight-bold">@item.MainTitle</h3>

                    <p class="text-justify">
                        @item.Title
                    </p>

                    <a class="btn btn-rounded btn-md ml-0" href="@item.ContactButtonUrl" role="button">@item.ContactButton<i class="fa fa-gem ml-2"></i></a>
                    <a class="btn btn-rounded btn-md ml-0" href="@item.RegisterButtonUrl" role="button">@item.RegisterButton
                    <i class="fa fa-gem ml-2"></i></a>

                </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6 mb-4 mb-md-0">

                        <!--Image-->
                        <div class="view overlay ">
                            <img src="@item.Animation" class="img-fluid" alt="">

                        </div>

                    </div>
                    <!--Grid column-->
                }



            </div>
            <!--Grid row-->


        </section>
        <!--Section: Content-->


    </div>
    
}
