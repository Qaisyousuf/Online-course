                            <div class="card-body card-body-cascade text-center z-depth-1 CustomBannerFontStyle">

                                <div class="mt-4">
                                    <h3 class="font-weight-bold">@item.MainTitle</h3>
                                    <!-- Data -->
                                    <p class="text-justify">@item.Content</p>
                                </div>
                               
                              
                                <!-- Social shares -->

                            </div>
                            <!-- Card content -->

                        </div>
                    }
                    <!-- Card -->
                    <!-- Card -->
                    <!-- Excerpt -->
                        <div class="mt-5 mx-4">

                            <div class="container pb-3">


                                <!--Section: Content-->
                                <section class="text-center ">

                                  

                                    <div class="row text-center d-flex justify-content-center">
                                        @foreach (var item in Model.ListOfUpSkillingSection)
                                        {
                                            
                                                <div class="col-md-4 px-4 mb-2 CustomBannerFontStyle">

                                                    <div class="img-fluid mb-0 mx-4 my-3 mx-5">
                                                        <img src="@item.IconUrl" class="img-fluid" alt="smaple image">
                                                    </div>
                                                    <hp class="font-weight-normal mb-3">@item.Title</hp>
                                                    
                                                </div>
                                               
                                            
                                        }

                                    </div>

                                </section>
