@model ViewModel.ListOfViewModels

@if (Model.ListofCourseContentExploratoin != null)
{

    <div class="container">

        <!--Section: Content-->
        <section class="dark-grey-text">
            @foreach (var item in Model.ListofCourseContentExploratoin.Take(1))
            {
                <div class="row ">
                    <div class="col-md-6 col-lg-6">

                        <div class="view">
                            <lottie-player src="@item.AnimationUrl" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                        </div>

                    </div>
                    <div class="col-md-6 col-lg-6 d-flex align-items-center">
                        <div class="HomebannerExplorationTextColor">
                            <h2 class="font-weight-bold mb-2 ">@item.Title</h2>

                            @*<h5 class="font-weight-bold mb-4">@item.MainTitle</h5>*@

                            <p class="text-justify">@item.Content</p>

                          

                        </div>
                    </div>
                </div>
            }

           
        </section>
     
        <!--Section: Content-->


    </div>
}


