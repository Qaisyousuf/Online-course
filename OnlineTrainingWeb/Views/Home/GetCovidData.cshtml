@model ViewModel.ListOfViewModels

@if (Model.ListOfCovid != null)
{
    <div class="container mt-5">


        <!--Section: Content-->
        <section>

            <!-- Grid row -->
            <div class="row">
                @foreach (var item in Model.ListOfCovid.Take(1))
                {
                    <!-- Grid column -->
                    <div class="col-lg-5 mb-4">

                        <!-- Featured image -->
                        <div class="view overlay mb-4">
                            <div class="view">
                                <lottie-player src="@item.ImageUrl" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>
                        </div>

                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-lg-7 mb-4 align-self-center text-center text-lg-left HomebannerExplorationTextColor">

                        <h2 class="h2 mb-2 font-weight-bold">@item.MainTitle</h2>
                        <p class="text-muted mb-2 text-justify">@item.Content</p>

                        <a href="@item.CovidButtonUrl" class="btn btn-rounded btn-md" target="_blank"><i class="fas fa-eye"></i> @item.CovidButtonText</a>
                        <a href="@item.CourseButtonUrl" class="btn btn-rounded btn-md"><i class="fas fa-chalkboard-teacher"></i> @item.CourseButtonText</a>

                    </div>
                    <!-- Grid column -->
                }


            </div>
            <!-- Grid row -->

        </section>
        <!--Section: Content-->


    </div>
}