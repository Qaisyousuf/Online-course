
@model ViewModel.ListOfViewModels

@if (Model.ListOfOurVision != null)
{
<div class="OurVisonmainBackground">
    <div class="container mt-5">


        <!--Section: Content-->
        <section>

            <!-- Grid row -->
            <div class="row">
                @foreach (var item in Model.ListOfOurVision.Take(1))
                {
                    <!-- Grid column -->
                    <div class="col-lg-6 col-md-6 mb-4 align-self-center text-center text-lg-left HomebannerExplorationTextColor">

                        <h1 class="font-weight-bold mb-2">@item.MainTitle</h1>
                        <h4 class="text-justify mb-4">@item.Content</h4>

                        <a href="@item.ButtonUrl" class="btn btn-rounded btn-md"><i class="fas fa-eye"></i> @item.ButtonText</a>


                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-lg-6 col-md-6 mb-4">

                        <!-- Featured image -->
                        <div class="view overlay">
                            <div class="view">
                                <lottie-player src="@item.ImageUrl" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>
                            
                        </div>

                    </div>
                    <!-- Grid column -->
                }


            </div>
            <!-- Grid row -->

        </section>
        <!--Section: Content-->


    </div>
</div>
    
}
