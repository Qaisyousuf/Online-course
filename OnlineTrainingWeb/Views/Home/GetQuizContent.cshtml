@model ViewModel.ListOfViewModels

@if (Model.ListofQuizContnet != null)
{
<div class="QuizMainBackground">
   
    <header>

        <!-- Full Page Intro -->
        <div class="pt-5">
            <!-- Mask & flexbox options-->
            <div class="mask">
                <!-- Content -->
                <div class="container h-100">
                    <!--Grid row-->
                    <div class="row align-items-center h-100">
                        @foreach (var item in Model.ListofQuizContnet)
                        {
                            <!--Grid column-->
                            <div class="BackgroundAnimation col-md-6 textColor pt-5 ">
                              
                                    <div class="AnimationMainBackground img-fluid">
                                        <lottie-player src="https://assets7.lottiefiles.com/packages/lf20_ioyngrb9.json" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                    </div>
                                    <div class="QuizMainContent"></div>
                                    <h1 class="mb-4">@item.MainTitle</h1>
                                    <p class="mb-4 pb-2 textColor">@item.Content</p>
                                    <a href="@item.ButtonUrl" class="btn btn-rounded">@item.ButtonText</a>
                               
                               
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6">
                                <img src="@item.ImageUrl" alt="" class="img-fluid">
                            </div>
                            <!--Grid column-->
                        }

                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </div>
        <!-- Full Page Intro -->

    </header>
</div>
    
    <!-- Main navigation -->
}
