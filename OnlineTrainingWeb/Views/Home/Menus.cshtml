@model List<ViewModel.MenusViewModel>

<ul class=" nav navbar-nav mr-auto">
    @foreach (var menu  in Model)
    {
        if(menu.ParentId ==null)
        {
            var submenu = Model.Where(x => x.ParentId == menu.Id).ToList();

            if(submenu !=null && submenu.Count>0)
            {
                <li class="dropdown">
                    <a title="@menu.Description" href="#" class="dropdown-toggle" data-target="dropdown">@menu.Title<b class="caret"></b></a>
                    <ul class="dropdown-menu">

                        @foreach (var e in submenu)
                        {
                            <li><a title="@e.Description"href="@e.Url">@e.Title</a></li>
                        }
                    </ul>
                
                </li>
            }
            else
            {
                <li class=""><a title="@menu.Description" href="@menu.Url">@menu.Title</a></li>
            }
        }
    }
</ul>
