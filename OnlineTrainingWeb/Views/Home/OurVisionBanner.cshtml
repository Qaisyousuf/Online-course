@model ViewModel.ListOfViewModels
@{
    ViewBag.Title = "OurVisionBanner";
    Layout = "~/Views/Shared/_OurVisionLayout.cshtml";
}

@if (Model.ListOfOurVisoinBanner != null && Model.ListofVisionExploration !=null)
{
    <div class="OurVisonMainbackground">

        <div class="container ">
            <header>

                <!-- Full Page Intro -->
                <div class="">
                    <!-- Mask & flexbox options-->
                    <div class="mask">
                        <!-- Content -->
                        <div class="container">
                            <!--Grid row-->
                            <div class="row align-items-center">
                                @foreach (var item in Model.ListOfOurVisoinBanner.Take(1))
                                {
                                    <!--Grid column-->
                                    <div class="col-md-7 textColor ContactMainTitle ">
                                        <h1 class="mb-2 font-weight-bold">@item.MainTitle</h1>
                                        <p class="mb-2 pb-2">@item.SubTitle</p>
                                        <a href="@item.DiscoverButtonUrl" class="btn  btn-rounded btn-md ml-0"><i class="fas fa-sign-in-alt"></i> @item.DiscoverButton</a>
                                        <a href="@item.JoinButtonUrl" class="btn   btn-rounded btn-rounded btn-md"> <i class="fas fa-book-open"></i> @item.JoinButton</a>
                                    </div>
                                    <!--Grid column-->
                                    <!--Grid column-->
                                    <div class="col-md-5">
                                        <div class="VisionAnimation">
                                            <lottie-player src="https://assets6.lottiefiles.com/packages/lf20_ig2jd44q.json" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                            <div class="VisionImageBackground">

                                                <img src="@item.ImageUrl" class="img-fluid" alt="smaple image">

                                            </div>
                                        </div>

                                    </div>

                                }

                                <!--Grid column-->
                            </div>
                            <!--Grid row-->
                        </div>
                        <!-- Content -->
                    </div>
                    <!-- Mask & flexbox options-->
                </div>
                <!-- Full Page Intro -->

            </header>
        </div>

    </div>

    <div class="VisionExplorationMainBackground">
        <div class="container my-5 p-5 "id="WhoIsThisProgramFor">


            <!--Section: Content-->
            <section class="CustomBannerFontStyle">
                @foreach (var item in Model.ListofVisionExploration.Take(1))
                {
                    <h2 class="text-center font-weight-bold mb-4 pb-2">@item.MainTitle</h2>
                    <!-- Section description -->
                    <p class="text-center lead grey-text mx-auto mb-5">
                       @item.Content
                    </p>
                }
                <!-- Section heading -->
                <!-- Grid row -->
                    <div class="row">
                        @foreach (var item in Model.ListofVisionExploration.Take(1))
                        {
                        <div class="col-lg-5 text-center text-lg-left">
                            <div class="view">
                                <lottie-player src="@item.ImageUrl" background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>
                        </div>
                        }
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <!-- Grid column -->
                            <div class="col-lg-7">
                                @foreach (var item in Model.ListofVisionExploration.Skip(1))
                                {
                                    <div class="row mb-3">

                                        <!-- Grid column -->
                                        <div class="col-1">
                                            <i class="fas fa-share fa-lg indigo-text"></i>
                                        </div>
                                        <!-- Grid column -->
                                        <!-- Grid column -->
                                        <div class="col-xl-10 col-md-11 col-10">
                                            <h5 class="font-weight-bold mb-3">@item.SubTitle</h5>
                                            <p class="grey-text">
                                              @item.Content
                                            </p>
                                        </div>
                                        <!-- Grid column -->

                                    </div>
                                }
                                <!-- Grid row -->
                                <!-- Grid row -->


                            </div>
                        <!--Grid column-->

                    </div>
                <!-- Grid row -->

            </section>
            <!--Section: Content-->


        </div>
    </div>
    
}


